<div class="card text-center">
  <div class="card-header">
    Your Friend
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name + ' ' +  @friend.last_name %></h5>
    <p class="card-text"><b>Email</b> : <%= @friend.email %> | <b>Phone Number</b> : <%= @friend.phone %> | <b>Twitter</b> : <%= @friend.twitter %></p>
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= link_to 'Back', friends_path, class:"btn btn-dark" %>
  </div>
  <div class="card-footer text-muted">
    <br>
  </div>
</div>